<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jianhua.mascaretaker">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CareTakerLoginActivity"
            android:label="@string/title_activity_care_taker_login" />
        <activity android:name=".CareTakerMainActivity" />
        <activity
            android:name=".SeniorLoginActivity"
            android:label="@string/title_activity_senior_login" />
        <activity
            android:name=".CreateAssociateAccountActivity"
            android:label="Create Associate Account" />
        <activity
            android:name=".CareTakerAfterLogin"
            android:label="CareTakerAfterLogin" />
        <activity
            android:name=".ItemListActivity"
            android:label="@string/title_activity_item_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".DailyRecordActivity" />
        <activity android:name=".DateOption" />
        <activity android:name=".GraphActivity"></activity>
    </application>

</manifest>